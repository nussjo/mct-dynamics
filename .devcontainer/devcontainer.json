{
    "name": "MCT",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "mounts": [
        "type=bind,source=${env:HOME}/.ssh,target=/home/nussjo/.ssh"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "containerEnv": {
        "CONAN_USER_HOME": "/workspaces/mct/"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "matepek.vscode-catch2-test-adapter",
                "marus25.cortex-debug",
                "actboy168.tasks",
                "eamodio.gitlens",
                "twxs.cmake",
                "asciidoctor.asciidoctor-vscode",
                "jebbs.plantuml"
            ]
        }
    }
}
